{
	"compilerOptions": {
		"module":"ES2022",
		"esModuleInterop": true,
		"target":"ES2022",
		"noImplicitAny": true,
		"moduleResolution":"node",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"typeRoots": ["@types", "node_modules/@types"]
	},
	"include": ["src/**/*"]
}
